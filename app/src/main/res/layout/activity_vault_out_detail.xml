<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.vault_out_detail">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_out_detail_LL_Info">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_out_detail_tv_taskname"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/royalblue"
            android:text="@string/vault_out_detail_tv_taskname"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_out_detail_btn_readcard"
            android:layout_alignParentEnd="true"
            android:text="@string/vault_out_detail_btn_readcard"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_out_detail_LL_listtitle"
        android:layout_below="@+id/vault_out_detail_LL_Info"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_out_detail_tv_boxstaut"
            android:textColor="@color/chocolate"
            android:textSize="20sp"
            android:text="@string/vault_out_detail_tv_boxstaut"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:id="@+id/vault_out_detail_tv_type"
            android:textSize="20sp"
            android:textColor="@color/androidgreend"
            android:text="@string/vault_out_detail_tv_boxstype"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_out_detail_ll_boxinfo"
        android:layout_below="@+id/vault_out_detail_LL_listtitle"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_out_detail_tv_boxinfo"
            android:textSize="45sp"
            android:textColor="@color/androidredd"
            android:text="@string/vault_out_detail_tv_boxinf"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_out_detail_LL_listview"
        android:layout_below="@+id/vault_out_detail_ll_boxinfo"
        android:layout_above="@+id/vault_out_detail_LL_operate">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/vault_out_detail_lv">
            </ListView>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/vault_out_detail_LL_operate"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/vault_out_detail_btn_scan1d"
            android:layout_weight="1"
            android:text="@string/vault_out_detail_btn_sacan1d"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/vault_out_detail_btn_scanuhf"
            android:layout_weight="1"
            android:text="@string/vault_out_detail_btn_scanuhf"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/vault_out_detail_btn_enter"
            android:layout_weight="1"
            android:text="@string/vault_out_detail_btn_enter"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/vault_out_detail_cb_tips"
            android:text="@string/vault_out_detail_btn_tips"/>
        </LinearLayout>
</RelativeLayout>
