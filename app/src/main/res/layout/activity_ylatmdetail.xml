<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ylescort.ylmobileandroid.YLATMDetail">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ylatmdetail_ll_Sitename">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylsite_tv_sitename"
        android:text="网点名称"
        android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_startime"
        android:layout_below="@+id/ylatmdetail_ll_Sitename">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylatmdetail_btn_start"
            android:text="开始:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylatmdetail_tv_start"
            android:textSize="20sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_endtime"
        android:layout_below="@+id/ylatmdetail_ll_startime"
        android:layout_marginTop="20sp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylatmdetail_btn_end"
            android:text="结束:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylatmdetail_tv_end"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ylatmdetail_ll_endtime"
        android:id="@+id/ylatmdetail_ll_atmcounttitle"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylatmdetail_tv_count"
            android:text="ATM数量"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="3"
            android:gravity="center"
            android:id="@+id/ylatmdetail_et_atmcount"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_atmcount"
        android:layout_below="@+id/ylatmdetail_ll_atmcounttitle"
        android:gravity="center"
        android:layout_marginTop="20sp">
        <Button
            android:layout_width="90sp"
            android:layout_height="60sp"
            android:id="@+id/ylatmdetail_btn_del1"
            android:text="-1"/>
        <Button
            android:layout_width="90sp"
            android:layout_height="60sp"
            android:id="@+id/ylatmdetail_btn_add1"
            android:text="+1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ylatmdetail_ll_atmcount"
        android:layout_marginTop="20sp"
        android:gravity="center">
        <Button
            android:layout_width="110sp"
            android:layout_height="60sp"
            android:text="确认"
            android:id="@+id/ylatmdetail_btn_enter"/>
        <Button
            android:layout_width="110sp"
            android:layout_height="60sp"
            android:layout_marginStart="20sp"
            android:id="@+id/ylatmdetail_btn_cancel"
            android:text="取消"/>
        </LinearLayout>
</RelativeLayout>
