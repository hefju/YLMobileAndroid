<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ylescort.ylmobileandroid.YLATMDetail">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_startime">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-11 11:11:11"
            android:textSize="20sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_endtime"
        android:layout_below="@+id/ylatmdetail_ll_startime"
        android:layout_marginTop="30sp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-11 11:11:11"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ylatmdetail_ll_endtime"
        android:id="@+id/ylatmdetail_ll_atmcounttitle"
        android:layout_marginTop="30sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATM数量:"
            android:textSize="30sp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ylatmdetail_ll_atmcount"
        android:layout_below="@+id/ylatmdetail_ll_atmcounttitle"
        android:gravity="center"
        android:layout_marginTop="30sp">
        <Button
            android:layout_width="90sp"
            android:layout_height="60sp"
            android:text="-1"/>
        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
        <Button
            android:layout_width="90sp"
            android:layout_height="60sp"
            android:text="+1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ylatmdetail_ll_atmcount"
        android:layout_marginTop="60sp"
        android:gravity="center">
        <Button
            android:layout_width="110sp"
            android:layout_height="60sp"
            android:text="确认"/>
        <Button
            android:layout_width="110sp"
            android:layout_height="60sp"
            android:layout_marginStart="20sp"
            android:text="取消"/>
        </LinearLayout>
</RelativeLayout>
