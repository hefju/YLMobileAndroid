<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.YLBoxEdit">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/boxedi_rtl_title">
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_order"
        android:text="@string/boxitem_order"/>
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_Number"
        android:text="@string/boxitem_Boxid"
        android:layout_toRightOf="@+id/boxedi_order"/>
    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_gog"
        android:text="@string/boxitem_TradeAction"
        android:layout_toRightOf="@+id/boxedi_Number"/>
    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_eof"
        android:text="@string/boxitem_Status"
        android:layout_toRightOf="@+id/boxedi_gog"/>
    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_stype"
        android:text="@string/boxitem_type"
        android:layout_toRightOf="@+id/boxedi_eof"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_count"
        android:text="@string/boxitem_count"
        android:layout_toRightOf="@+id/boxedi_stype"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:id="@+id/boxedi_rtl_boxlistview"
    android:layout_below="@+id/boxedi_rtl_title">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_listview"></ListView>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/boxedi_rtl_EdiGourp"
    android:layout_below="@+id/boxedi_rtl_boxlistview">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/boxedi_sw_gog"
        android:text="@string/boxitem_TradeAction"
        android:textOn="送"
        android:textOff="收"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_sw_eof"
        android:text="@string/boxitem_Status"
        android:layout_below="@+id/boxedi_sw_gog"
        android:textOn="实"
        android:textOff="空"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_radioGroup"
        android:layout_toRightOf="@id/boxedi_sw_gog">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_rb_money"
        android:text="@string/boxitem_monenybox"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxedi_rb_card"
            android:text="@string/boxitem_cardbox"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxedi_rb_Voucher"
            android:text="@string/boxitem_Voucherbox"/>
    </RadioGroup>
</RelativeLayout>
  <Button
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:id="@+id/boxedi_btn_ent"
      android:text="确定"
      android:layout_below="@+id/boxedi_rtl_EdiGourp"
      android:layout_alignEnd="@+id/boxedi_rtl_EdiGourp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boxedi_btn_del"
        android:text="删除"
        android:onClick="boxedi_del"
        android:layout_below="@+id/boxedi_rtl_EdiGourp"
        android:layout_toRightOf="@+id/boxedi_btn_ent"/>
</RelativeLayout>
