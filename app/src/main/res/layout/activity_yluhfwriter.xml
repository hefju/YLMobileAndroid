<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ylescort.ylmobileandroid.YLUHFWriter">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yluhfwriter_tv_title"
        android:textSize="30sp"
        android:textColor="@color/androidredl"
        android:text="@string/yluhfwriter_title"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yluhfwriter_ll_1dinfo"
        android:layout_below="@+id/yluhfwriter_tv_title"
        android:background="@drawable/border"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_lb_boxname"
            android:textSize="20sp"
            android:text="@string/yluhfwriter_boxname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_tv_boxname"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/yluhfwriter_lb_boxname" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/yluhfwriter_lb_boxid"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/yluhfwriter_lb_boxname"
            android:text="@string/yluhfwriter_boxid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_tv_boxid"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/yluhfwriter_lb_boxid"
            android:layout_below="@+id/yluhfwriter_tv_boxname" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yluhfwriter_tv_uhfinfo"
        android:text="@string/yluhfwriter_uhftitle"
        android:layout_marginTop="10sp"
        android:textColor="@color/androidgreenl"
        android:layout_below="@+id/yluhfwriter_ll_1dinfo"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yluhfwriter_rl_uhfinfo"
        android:layout_below="@+id/yluhfwriter_tv_uhfinfo"
        android:background="@drawable/border"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_lb_uhfno"
            android:text="@string/yluhfwriter_uhfno"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_tv_uhfno"
            android:layout_toEndOf="@+id/yluhfwriter_lb_uhfno"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yluhfwriter_tv_opertitle"
        android:text="@string/yluhfwriter_opertitle"
        android:textColor="@color/androidbluel"
        android:layout_marginTop="5sp"
        android:textSize="30sp"
        android:layout_below="@+id/yluhfwriter_rl_uhfinfo"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yluhfwriter_tv_opertitle"
        android:layout_marginTop="5sp"
        android:orientation="vertical">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_btn_1dread"
            android:text="@string/yluhfwriter_1dread"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_btn_uhfread"
            android:text="@string/yluhfwriter_uhfread"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yluhfwriter_btn_uhfwrite"
            android:text="@string/yluhfwriter_uhfwrite"/>
    </LinearLayout>
</RelativeLayout>
