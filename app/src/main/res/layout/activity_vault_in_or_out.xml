<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.VaultInOrOut">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:text="@string/vaultinorout_btn_CheckVault"
        android:id="@+id/vaultinorout_btn_CheckVault"
        android:layout_alignParentTop="true"
        android:background="@color/chartreuse" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:text="@string/vaultinorout_btn_in"
        android:id="@+id/vaultinorout_btn_in"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true"
        android:background="@color/royalblue"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:text="@string/vaultinorout_btn_out"
        android:id="@+id/vaultinorout_btn_out"
        android:layout_centerVertical="true"
        android:background="@color/peru"/>
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaultinorout_btn_out"
        android:calendarViewShown="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/vaultinorout_datepicker"
        android:layout_centerHorizontal="true">
        </DatePicker>
</RelativeLayout>
