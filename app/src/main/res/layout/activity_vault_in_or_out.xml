<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.VaultInOrOut">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/vaultinorout_ll_btn">
    <Button
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="60sp"
        android:text="@string/vaultinorout_btn_CheckVault"
        android:id="@+id/vaultinorout_btn_CheckVault"
        android:background="@color/chartreuse" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_weight="1"
        android:text="@string/vaultinorout_btn_tmpinorout"
        android:id="@+id/vaultinorout_btn_tmpinorout"
        android:background="@color/androidgreend" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vaultinorout_ll_btn2"
        android:layout_below="@+id/vaultinorout_ll_btn">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:text="@string/vaultinorout_btn_turnover"
            android:id="@+id/vaultinorout_btn_turnover"
            android:background="@color/androidpurplel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:id="@+id/vaultinorout_btn_weight"
            android:text="@string/vaultinorout_btn_weight"
            android:background="@color/androidyellowd"/>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:text="@string/vaultinorout_btn_in"
        android:id="@+id/vaultinorout_btn_in"
        android:background="@color/royalblue"
        android:layout_below="@+id/vaultinorout_ll_btn2"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:text="@string/vaultinorout_btn_out"
        android:id="@+id/vaultinorout_btn_out"
        android:background="@color/peru"
        android:layout_below="@+id/vaultinorout_btn_in"
        android:layout_alignParentStart="true"/>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaultinorout_btn_out"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_alignParentBottom="true"
        android:id="@+id/vaultinorout_datepicker"
        android:layout_centerHorizontal="true">
    </DatePicker>

</RelativeLayout>
