<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    tools:context="ylescort.ylmobileandroid.YLBoxScan">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_tv_title"
        style="@style/TextSize20"
        android:text="@string/box_tv_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box_LL_listview"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/box_tv_title"
        android:layout_above="@+id/box_ll_spinner">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boxlistview"
            android:longClickable="false"
            android:smoothScrollbar="false">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_ll_spinner"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/box_ll_boxgog"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交接类型:"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:id="@+id/box_sp_stype"
            android:background="@color/lightblue"
            android:minHeight="30sp"
            android:spinnerMode="dialog"
            >
        </Spinner>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_ll_boxgog"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/box_ll_boxfoe"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TextSize25"
                android:id="@+id/box_rbtn_get"
                android:text="@string/box_tv_get"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/box_rbtn_give"
                android:text="@string/box_tv_give"
                style="@style/TextSize25"/>

        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_ll_boxfoe"
        android:layout_above="@+id/box_ll_boxtype"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <RadioButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TextSize25"
                android:id="@+id/box_rbtn_full"
                android:text="@string/box_tv_full"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/box_rbtn_empty"
                android:text="@string/box_tv_empty"
                style="@style/TextSize25"/>

        </RadioGroup>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_ll_boxtype"
        android:layout_above="@+id/box_ll_tolly"
        android:layout_marginTop="10sp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="140sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/boxitem_monenybox"
                    style="@style/TextSize25"
                    android:id="@+id/box_rbtn_moneyboxs"
                    android:onClick="boxtyperbtn"/>
                <RadioButton
                    android:id="@+id/box_rbtn_cardbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/box_rbtn_moneyboxs"
                    android:text="@string/boxitem_cardbox"
                    android:layout_marginStart="10sp"
                    style="@style/TextSize25"
                    android:onClick="boxtyperbtn"/>
                <RadioButton
                    android:id="@+id/box_rbtn_Voucher"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    style="@style/TextSize20"
                    android:layout_marginTop="10sp"
                    android:text="@string/boxitem_Voucherbox"
                    android:layout_below="@+id/box_rbtn_moneyboxs"
                    android:onClick="boxtyperbtn"/>
                <RadioButton
                    android:id="@+id/box_rbtn_Voucherbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/box_rbtn_Voucher"
                    style="@style/TextSize20"
                    android:layout_marginTop="10sp"
                    android:text="@string/boxitem_Voucherboxbag"
                    android:layout_below="@+id/box_rbtn_cardbox"
                    android:onClick="boxtyperbtn"/>
            </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box_ll_tolly"
        android:layout_above="@+id/box_ll_btn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/box_tv_total"
            style="@style/TextSize20"
            android:text="@string/box_tv_total"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/box_ll_btn"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/box_btn_scan1d"
            android:id="@+id/box_btn_scan"
            android:onClick="ScanOnClick"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:id="@+id/box_btn_nonelable"
            android:onClick="NoLableIns"
            android:text="@string/box_btn_nolable"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:id="@+id/box_btn_ent"
            android:onClick="boxlistent"
            android:text="@string/box_btn_arrive"/>
    </LinearLayout>
</RelativeLayout>
