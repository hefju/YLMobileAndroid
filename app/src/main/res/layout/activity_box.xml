<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="ylescort.ylmobileandroid.box">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:id="@+id/box_tv_title"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:id="@+id/box_tv_order"
            android:layout_below="@+id/box_tv_title"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="编号"
            android:id="@+id/box_tv_Number"
            android:layout_below="@+id/box_tv_title"
            android:layout_toRightOf="@+id/box_tv_order"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="收/送"
            android:id="@+id/box_tv_gog"
            android:layout_below="@+id/box_tv_title"
            android:layout_toRightOf="@+id/box_tv_Number"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="空/实"
            android:id="@+id/box_tv_eof"
            android:layout_below="@+id/box_tv_title"
            android:layout_toRightOf="@+id/box_tv_gog"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="类型"
            android:id="@+id/box_tv_stype"
            android:layout_below="@+id/box_tv_title"
            android:layout_toRightOf="@+id/box_tv_eof"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:id="@+id/box_tv_count"
            android:layout_below="@+id/box_tv_title"
            android:layout_toRightOf="@+id/box_tv_stype"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="250dp"
        android:id="@+id/box_rel_staut">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收/送"
        android:id="@+id/box_swh_getorgive"
        android:layout_above="@+id/box_swh_emplyorfull"
        android:layout_alignParentStart="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空/实"
        android:id="@+id/box_swh_emplyorfull"
        android:layout_above="@+id/box_swh_singleormore"
        android:layout_alignParentStart="true"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单/多"
            android:id="@+id/box_swh_singleormore"
            android:layout_alignBottom="@+id/box_rg"
            android:layout_alignParentStart="true"/>
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/box_rg"
    android:layout_toRightOf="@+id/box_swh_getorgive">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="款箱"
        android:id="@+id/box_rbtn_moneyboxs"
        android:layout_above="@+id/box_swh_emplyorfull"
        android:layout_alignStart="@+id/box_rbtn_cardbox"
        android:layout_x="230dp"
        android:layout_y="250dp"
        android:checked="true"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卡箱"
        android:id="@+id/box_rbtn_cardbox"
        android:layout_alignTop="@+id/box_swh_emplyorfull"
        android:layout_alignStart="@+id/box_rbtn_Voucher"
        android:layout_x="230dp"
        android:layout_y="280dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凭证"
        android:id="@+id/box_rbtn_Voucher"
        android:layout_below="@+id/box_swh_emplyorfull"
        android:layout_toEndOf="@+id/box_swh_emplyorfull"
        android:layout_x="230dp"
        android:layout_y="310dp"/>

</RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="360dp"
        android:layout_below="@+id/box_rel_staut"
        android:layout_alignParentStart="true">

        <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="扫描"
        android:layout_x="0dp"
        android:layout_y="380dp"
        android:id="@+id/box_btn_scan"
        android:onClick="ScanOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="无标签"
            android:onClick="NoLableIns"
            android:id="@+id/box_btn_nonelable"
            android:layout_toRightOf="@+id/box_btn_scan"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:onClick="boxlistent"
            android:id="@+id/box_btn_ent"
            android:layout_toRightOf="@+id/box_btn_nonelable"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_x="0dp"
        android:layout_y="30dp" >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/boxlistview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>


</AbsoluteLayout>
