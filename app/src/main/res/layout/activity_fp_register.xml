<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginFpActivity">


    <LinearLayout
        android:id="@+id/pnl0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"

            android:layout_margin="2dp"
            android:gravity="center"

            android:text="注册登录"
            android:textSize="30sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pnl0">


        <TextView
            android:id="@+id/txtUser1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"

            android:layout_margin="2dp"
            android:gravity="center"

            android:text="员工编号:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmpNum"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnl2"
        android:layout_below="@+id/pnl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"

            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@color/red"

            android:text="登录信息"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pnl2"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnFpOpen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="#98ff72"
            android:textSize="30sp"
            android:text="开启指纹动能"
            />

    </LinearLayout>

</RelativeLayout>
