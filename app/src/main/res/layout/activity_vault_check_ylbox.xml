<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.vault_check_ylbox">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_check_rl_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vault_check_ylbox_boxname"
            android:id="@+id/vault_check_tv_baseName"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/vault_check_tv_baseName"
            android:textSize="20sp"
            android:id="@+id/vault_check_tv_statistics" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vault_check_ylbox_basename"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/vault_check_tv_scanman"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vault_check_rl_listview"
        android:layout_below="@+id/vault_check_rl_title"
        android:layout_above="@+id/vault_check_rl_operate">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_check_lv">
        </ListView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vault_check_rl_operate"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_check_btn_scan"
            android:background="@color/androidbluel"
            android:text="@string/vault_check_ylbox_Scan1d"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_check_btn_uhf"
            android:background="@color/androidbluel"
            android:layout_toEndOf="@+id/vault_check_btn_scan"
            android:visibility="gone"
            android:text="@string/vault_check_ylbox_uhf"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_check_btn_basedep"
            android:layout_toEndOf="@+id/vault_check_btn_uhf"
            android:layout_marginStart="40sp"
            android:text="@string/vault_check_ylbox_changbase"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vault_check_btn_conFirm"
            android:layout_alignParentEnd="true"
            android:text="@string/vault_check_ylbox_comfrom"/>

    </RelativeLayout>
</RelativeLayout>
