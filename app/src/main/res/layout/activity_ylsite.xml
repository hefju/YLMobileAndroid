<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.YLSite">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylsite_tv_title"
        android:text="@string/box_tv_title"
        style="@style/TextSize25"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylsite_LL_itemtitle"
        android:layout_below="@+id/ylsite_tv_title">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            style="@style/TextSize20"
            android:text="类型"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/TextSize20"
            android:text="名称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSize20"
            android:text="状态"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ylsite_LL_itemtitle"
        android:layout_above="@+id/ylsite_LL_button">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylsite_lv_MainView">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ylsite_LL_button"
        android:layout_alignParentBottom="true"
        android:gravity="end">
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/Site_check"
            android:text="统计"/>
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/Site_apply"
            android:text="申请"/>
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/Site_Update"
            android:text="上传"
            android:onClick="YLSite_UpDate"/>
    </LinearLayout>

</RelativeLayout>
