<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ylescort.ylmobileandroid.YLSite">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ylsite_LL_Title">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylsite_tv_title"
        android:textSize="30sp"
        android:text="标题"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ylsite_LL_Title"
        android:id="@+id/ylsite_LL_itemtitle">
<TextView
    android:layout_width="70sp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:id="@+id/ylsite_Num"
    android:text="类型"
    />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/ylsite_Name"
        android:text="名称"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/ylsite_state"
        android:text="状态"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/ylsite_LL_itemtitle"
        android:id="@+id/linearLayout2">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ylsite_lv_MainView">
            </ListView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:gravity="end">
        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/Site_Update"
            android:text="上传"
            android:onClick="YLSite_UpDate"/>
        </LinearLayout>

</RelativeLayout>
