<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ylescort.ylmobileandroid.HomYLBoxScan">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_ll_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homylboxscan_tv_title"
            android:textSize="25sp"
            android:textColor="@color/darkorange"
            android:text="@string/box_tv_title"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_rl_boxname"
        android:layout_below="@+id/homylboxscan_ll_title"
        android:layout_marginTop="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_Boxid"
            android:id="@+id/homylboxscan_tv_boxname_lable"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homylboxscan_tv_boxname"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/homylboxscan_tv_boxname_lable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_count"
            android:textSize="25sp"
            android:layout_toStartOf="@+id/homylboxscan_tv_boxcount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/homylboxscan_tv_boxcount"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_rl_boxsype"
        android:layout_below="@id/homylboxscan_rl_boxname"
        android:layout_marginTop="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_TradeAction"
            android:textSize="25sp"
            android:id="@+id/homylboxscan_tv_boxaction_lable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/homylboxscan_tv_boxaction"
            android:layout_toEndOf="@+id/homylboxscan_tv_boxaction_lable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_type"
            android:textSize="25sp"
            android:layout_marginStart="120sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:id="@+id/homylboxscan_tv_boxtype"
            android:layout_marginEnd="10sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_rl_tasktype"
        android:layout_below="@+id/homylboxscan_rl_boxsype"
        android:layout_marginTop="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_Status"
            android:textSize="25sp"
            android:id="@+id/homylboxscan_tv_boxstaut_lable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/homylboxscan_tv_boxstaut"
            android:layout_toEndOf="@+id/homylboxscan_tv_boxstaut_lable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boxitem_tasktype"
            android:layout_marginStart="120sp"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:id="@+id/homylboxscan_tv_tasktype"
            android:layout_marginEnd="10sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_ll_taskdate"
        android:layout_below="@+id/homylboxscan_rl_tasktype"
        android:layout_marginTop="5sp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_hom_ylbox_tasktype"
            android:id="@+id/homylboxscan_tv_boxtasktype_label"
            android:textSize="20sp"/>
        <Spinner
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:id="@+id/homylboxscan_sp_tasktype"
            android:background="@color/lightblue"
            android:spinnerMode="dialog">
        </Spinner>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homylboxscan_btn_date"

            android:text="@string/title_activity_hom_ylbox_date"
            android:textSize="20sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_ll_boxgog"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/homylboxscan_ll_taskdate"
        android:background="@drawable/border"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TextSize25"
                android:id="@+id/homylboxscan_rbtn_get"
                android:text="@string/box_tv_get"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homylboxscan_rbtn_give"
                android:text="@string/box_tv_give"
                style="@style/TextSize25"/>

        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_ll_boxfoe"
        android:layout_below="@+id/homylboxscan_ll_boxgog"
        android:background="@drawable/border"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <RadioButton
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/TextSize25"
                android:id="@+id/homylboxscan_rbtn_full"
                android:text="@string/box_tv_full"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homylboxscan_rbtn_empty"
                android:text="@string/box_tv_empty"
                style="@style/TextSize25"/>

        </RadioGroup>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homylboxscan_ll_boxtype"
        android:layout_below="@+id/homylboxscan_ll_boxfoe">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">
            <RadioButton
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/boxitem_monenybox"
                style="@style/TextSize25"
                android:id="@+id/homylboxscan_rbtn_moneyboxs" />
            <RadioButton
                android:id="@+id/homylboxscan_rbtn_cardbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/homylboxscan_rbtn_moneyboxs"
                android:text="@string/boxitem_cardbox"
                android:layout_marginStart="10sp"
                style="@style/TextSize25" />
            <RadioButton
                android:id="@+id/homylboxscan_rbtn_Voucher"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                style="@style/TextSize25"
                android:layout_marginTop="10sp"
                android:text="@string/boxitem_Voucherbox"
                android:layout_below="@+id/homylboxscan_rbtn_moneyboxs" />
            <RadioButton
                android:id="@+id/homylboxscan_rbtn_Voucherbag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/homylboxscan_rbtn_Voucher"
                style="@style/TextSize25"
                android:layout_marginTop="10sp"
                android:text="@string/boxitem_Voucherboxbag"
                android:layout_below="@+id/homylboxscan_rbtn_cardbox" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/homylboxscan_ll_btn"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/box_btn_scan1d"
            android:id="@+id/homylboxscan_btn_scan" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:id="@+id/homylboxscan_btn_nonelable"
            android:text="@string/box_btn_nolable"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:id="@+id/homylboxscan_btn_ent"
            android:text="@string/box_btn_arrive"/>
    </LinearLayout>

</RelativeLayout>
