<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ylescort.ylmobileandroid.Valut_turnover">

    <RelativeLayout
        android:id="@+id/vault_turnover_ll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vault_turnover_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="基地分类"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vault_turnover_ll_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vault_turnover_ll_showlist"
        android:layout_below="@+id/vault_turnover_ll_title">

        <ListView
            android:id="@+id/vault_turnover_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vault_turnover_ll_showlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vault_turnover_ll_inorout"
        android:layout_marginBottom="10sp"
        android:gravity="center">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/vault_turnover_rbtn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/valut_turnover_rbtn_all"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/vault_turnover_rbtn_lack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valut_turnover_rbtn_lack"
                android:textColor="@color/androidbluel"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/vault_turnover_rbtn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valut_turnover_rbtn_more"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/vault_turnover_rbtn_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valut_turnover_rbtn_count"
                android:textColor="@color/androidgreenl"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vault_turnover_ll_inorout"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/vault_turnover_ll_oper"
        android:gravity="center">

        <Button
            android:id="@+id/vault_turnover_btn_vaultin"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:text="@string/valut_turnover_btn_vaultin" />

        <Button
            android:id="@+id/vault_turnover_btn_vaultout"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="10sp"
            android:text="@string/valut_turnover_btn_vaultout" />

        <Button
            android:id="@+id/vault_turnover_btn_count"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/valut_turnover_btn_count" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vault_turnover_ll_oper"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/vault_turnover_btn_scan"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:text="@string/valut_turnover_btn_scan" />

        <Button
            android:id="@+id/vault_turnover_btn_uhf"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="10sp"
            android:text="@string/valut_turnover_btn_uhf" />

        <Button
            android:id="@+id/vault_turnover_btn_upload"
            android:layout_width="90sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="10sp"
            android:text="@string/valut_turnover_btn_upload" />
    </LinearLayout>
</RelativeLayout>
